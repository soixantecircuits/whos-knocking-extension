{
  "name": "__MSG_extName__",
  "version": "0.1",
  "manifest_version": 2,
  "description": "Who's knocking at the door extension allowing you to receive notification about people knocking at the door ?",
  "icons": { "16": "icon16.png",
           "48": "icon48.png",
          "128": "icon128.png",
          "256": "icon256.png"},
  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "index.html"
  },
  "default_locale": "en",
  "permissions": [
    "https://stream.twitter.com/*",
    "http://*.twitter.com/*",
    "http://twitter.com/*",
    "notifications"
  ],
  "background": { "scripts": ["socket.io.min.js","background.js","script.js"] },
  "options_page": "options.html"
}